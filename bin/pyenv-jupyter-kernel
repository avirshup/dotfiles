#!/usr/bin/env bash

set -e

function confirm() {
    echo "$1"
}

version=$(pyenv version-name)
if [ -z "${version}" ]; then
    echo pyenv version not found
    exit 1
fi

if ! pip show ipykernel >/dev/null 2>&1; then
    echo "ipykernel not installed. Install it? y/n"
    read response
    if [ $response -eq y ]; then
        echocmd pip install ipykernel
    else
        echo ok never mind
        exit 1
    fi
fi

python -m ipykernel install --user --name "$version" --display-name="$(python --version) (${version})"
